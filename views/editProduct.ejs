<% include partials/header %>
<div class="page-header">
<h1><%= product[0].NAME %></h1></div>
<form class="form-inline" action="/products" method="POST">

    <input type="hidden" name="code" value="<%= product[0].CODE %>">
<div class="form-group">
    <input type="text"  class="form-control" name="name" value="<%= product[0].NAME %>" required>
</div>
